
@model BugTracker.Web.ViewModels.TasksVM
@{
    ViewData["Title"] = "CreateNew";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (TempData["ErrorMessage"] != null)
{
      <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}
<h1>Create</h1>

<h4>Task</h4>

<hr />
<div class="row">
     <div class="col-md-4">
        <form asp-action="CreateNew" asp-controller="Tasks" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="TaskNo" class="control-label"></label>
                <input asp-for="TaskNo" class="form-control" />
                <span asp-validation-for="TaskNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
              <label asp-for="ProjectId" class="control-label">Project</label>
              <select asp-for="ProjectId" class="form-control" asp-items="ViewBag.ProjectsList">
                 <option> ---  Select --- </option>
              </select>
            </div>
            <div class="form-group">
              <label asp-for="CreatedUserId" class="control-label">CreatedUser</label>
              <select asp-for="CreatedUserId" class="form-control" asp-items="ViewBag.ProjectUserList">
                 <option> ---  Select --- </option>
              </select>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
              <label asp-for="Priority" class="control-label"></label>
              <select asp-for="Priority" class="form-control" asp-items="ViewBag.PriorityList">
                 <option> ---  Select --- </option>
              </select>
            </div>
            <div class="form-group">
              <label asp-for="Type" class="control-label"></label>
              <select asp-for="Type" class="form-control" asp-items="ViewBag.TypeList">
                 <option> ---  Select --- </option>
              </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

</div>


