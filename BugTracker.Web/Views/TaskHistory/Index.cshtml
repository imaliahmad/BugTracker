
@model IEnumerable<BugTracker.Web.ViewModels.TaskHistoryVM>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <h1>Task History</h1>

    <p>
        <a href="/TaskHistory/CreateNew">Create New</a>
    </p>
    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr>
                <th>
                  TaskName
                </th>
                <th>
                  @Html.DisplayNameFor(model => model.ModifiedDate)
                </th>
                <th>
                  @Html.DisplayNameFor(model => model.Status)
                </th>
                
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        @if (Model != null)
        {
            @foreach (var item in Model)
            {
                 <tr>
                     <td>
                        @Html.DisplayFor(modelItem => item.Tasks.Name)
                     </td>
                     <td>
                        @Html.DisplayFor(modelItem => item.ModifiedDate)
                     </td>
                     <td>
                        @Html.DisplayFor(modelItem => item.Status)
                     </td>
                     <td>
                        <a asp-action="Edit" class="color" asp-route-id="@item.Id">Edit |</a>
                        <a asp-action="Details" class="color" asp-route-id="@item.Id">Details</a>
                     </td>
                 </tr>
            }

        }


        </tbody>
    </table>

