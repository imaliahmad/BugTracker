
@model BugTracker.Web.ViewModels.TaskHistoryVM
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}
<h1>Edit</h1>

<h4>TaskHistory</h4>

<hr />
<div class="row">
     <div class="col-md-4">
        <form asp-action="Edit" asp-controller="TaskHistory" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="TaskId" class="control-label">TaskName</label>
                <select asp-for="TaskId" disabled class="form-control" asp-items="ViewBag.TaskList">
                 <option> ---  Select --- </option>
                </select>
            </div>

            <div class="form-group">
              <label asp-for="AssigneeId" class="control-label">AssignedUser</label>
              <select asp-for="AssigneeId" disabled class="form-control" asp-items="ViewBag.UserList">
                 <option> ---  Select --- </option>
              </select>
            </div>
            <div class="form-group">
                <label asp-for="ModifiedDate" class="control-label"></label>
                <input asp-for="ModifiedDate" readonly class="form-control" />
                <span asp-validation-for="ModifiedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
              <label asp-for="Status" class="control-label"></label>
              <select asp-for="Status" class="form-control" asp-items="ViewBag.StatusList">
                 <option> ---  Select --- </option>
              </select>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>




